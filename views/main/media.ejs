<div class="media page" id="media">
  <div class="container">
    <h1>Media</h1>
    <h2>Listen and enjoy these album song. It contains audio from mp3, Soundcould, and Spotify. Let's play!</h2>
    <div class="toggle-buttons">
      <span class="left active">Audio</span>
      <span class="right">Video</span>
    </div>
    <div class="media-list">
      <ul class="audio-list">
        <% audios.forEach((audio, index) => { %>
          <% const className = index === 0 ? 'active' : '' %>
            <li class="<%= className %>">
              <div class="wrapper" data-title="<%= audio.title %>" data-url="<%= audio.url %>">
                <div class="play-pause">
                  <i class="far fa-play-circle"></i>
                </div>
                <div class="info">
                  <h2>
                    <%= audio.title %>
                  </h2>
                  <h3>Jon Anderson</h3>
                </div>
                <div class="action">
                  <button>Share This</button>
                </div>
              </div>
              <hr>
            </li>
            <% }) %>
      </ul>
    </div>
  </div>
</div>